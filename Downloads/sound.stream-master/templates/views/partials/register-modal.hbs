<div class="modal fade" id="register-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<h3 class="modal-title text-center" id="exampleModalLabel">Register New Account</h3>
			</div>
			<br>
			<div class="modal-body">
				<div id="register-form">
					<div class="input-group form-input">
						<div class="input-group-addon input-icon">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</div>
						<input type="text" class="form-control input-lg register-email" name="email" placeholder="email address (required)">
					</div>
					<br>
					<div class="input-group form-input">
						<div class="input-group-addon input-icon">
							<i class="fa fa-key" aria-hidden="true"></i>
						</div>
						<input type="password" class="form-control input-lg register-password" name="password" placeholder="password (required)" type="password">
					</div>
					<br>
	                <button onclick="register()" class="btn btn-primary btn-md col-md-12 form-btn" alight="right" align="middle">Register<span id="new-channel-title"></span></button>
	        	</div>

	            <div class="loader-div" id="register-loader" style="display: none;">
	            	<div class="loader text-center"></div>
	            	<br>
	            	<h4 class="text-center">Registering Account...</h4>
	            </div>
			</div>
		</div>
	</div>
</div>